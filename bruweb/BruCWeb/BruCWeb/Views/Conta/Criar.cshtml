@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Criar Conta";
}

<div class="register-container">
    <h1 class="register-title">Criar Conta</h1>

    <form method="post" asp-action="Criar" class="register-form">
        <div class="form-group">
            <label for="username">Nome de Usuário</label>
            <input type="text" id="username" name="username" class="form-control" required pattern="[a-z0-9]+" title="Somente letras minúsculas e números, sem caracteres especiais" />
        </div>
        <div class="form-group">
            <label for="firstName">Nome</label>
            <input type="text" id="firstName" name="firstName" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="lastName">Sobrenome</label>
            <input type="text" id="lastName" name="lastName" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="birthdate">Data de Nascimento</label>
            <input type="date" id="birthdate" name="birthdate" class="form-control" required max="9999-12-31" />
        </div>
        <div class="form-group">
            <label for="gender">Sexo</label>
            <select id="gender" name="gender" class="form-control" required>
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
                <option value="O">Outros</option>
                <option value="N">Prefiro não informar</option>
            </select>
        </div>
        <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Criar Conta</button>
        </div>
    </form>
</div>
